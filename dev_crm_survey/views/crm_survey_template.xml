<odoo>
    <!--form view-->
    <record id="form_survey_template_dev_crm_survey" model="ir.ui.view">
        <field name="name">form_survey_template_dev_crm_survey_name</field>
        <field name="model">crm.survey.template</field>
        <field name="arch" type="xml">
            <form string="Survey Template">
                <sheet>
                    <div class="oe_title">
                        <h4 class="o_row">
                            <field name="name" placeholder="Template Name"/>
                        </h4>
                    </div>
                    <separator string="Survey"/>
                    <field name="survey_ids"/>
                </sheet>
            </form>
        </field>
    </record>

    <!--tree View-->
    <record id="tree_survey_template_dev_crm_survey" model="ir.ui.view">
        <field name="name">tree_survey_template_dev_crm_survey_name</field>
        <field name="model">crm.survey.template</field>
        <field name="arch" type="xml">
            <tree string="Survey Template">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!--Action View-->
    <record id="action_survey_template_dev_crm_survey" model="ir.actions.act_window">
        <field name="name">Survey Template</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">crm.survey.template</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!--Menus-->
    <menuitem name="Survey Template"
              id="menu_survey_template_dev_crm_survey"
              parent='crm.crm_menu_config'
              action="action_survey_template_dev_crm_survey"
              sequence='2'/>
</odoo>
