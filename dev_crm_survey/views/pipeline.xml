<odoo>
    <record id="form_pipeline_dev_crm_survey_inherited" model="ir.ui.view">
        <field name="name">form_pipeline_dev_crm_survey_inherited_name</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="survey_history" string="Survey" invisible="type == 'lead'" >
<!--                attrs="{'invisible': [('type', '=', 'lead')]}"-->
                     <group>
                        <group>
                            <field name="survey_template_id"/>
                        </group>
                    </group>

                    <field name="survey_history_ids">
                        <tree editable="bottom">
                            <field name="survey_id"/>
                            <field name="survey_answer_id" column_invisible="1"/>
                            <field name="already_answer_survey" column_invisible="1"/>
                            <button name="start_survey"
                                    type="object"
                                    string="Start Survey"
                                    icon="fa-play-circle"
                                    invisible="already_answer_survey == True"
                                    />
<!--                                    attrs="{'invisible': [('already_answer_survey', '=', True)]}"-->
			      <button name="send_survey_to_customer"
                                    type="object"
                                    string="Send"
                                    icon="fa-paper-plane"/>
			    
                            <button name="print_survey"
                                    type="object"
                                    string="Print Answer"
                                    icon="fa-print"
                                    invisible="already_answer_survey == False"
                                    />
<!--                                    attrs="{'invisible': [('already_answer_survey', '=', False)]}"-->
                        </tree>
                        <form>
                            <group>
                                <group>
                                    <field name="survey_id"/>
                                </group>
                                <group>
                                    <field name="already_answer_survey" column_invisible="1"/>
                                    <field name="survey_answer_id" column_invisible="1"/>
                                </group>
                            </group>
                        </form>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
